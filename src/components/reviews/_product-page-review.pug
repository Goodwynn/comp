.product-review.p-2.mb-4.shadow
  .row.g-2 
    .col-auto
      img(src=item.authorImg, alt=item.authorName)
    .col
      .row.justify-content-between.align-items-center.mb-3
        .col-auto
          .row.align-items-center 
            .col-auto
              .product-review-author=item.authorName
            .col-auto
              if (item.buyCheck)
                .product-review-buy-badge 
                  +svgMono('basket')
                  span уже купил(а)
            .col-auto 
              .product-card-stars
                - for (i=1; i<=5; i++)
                  if (item.rating >= i )
                    .star.active
                      +svgMono('star')
                  else 
                    .star
                      +svgMono('star')
        .col-auto
          .product-review-date=item.date
      .row.flex-column 
        .col
          .product-review-text.mb-2=item.review.text
        .col 
          .product-review-pros-title.mb-2 Достоинства:
          .product-review-pros.mb-2=item.review.pros
        .col 
          .product-review-cons-title.mb-2 Недостатки:
          .product-review-cons.mb-2=item.review.cons
      .row.justify-content-between
        .col-auto 
          .row 
            .col-auto 
              button 
                +svgMono('comment')
                span Ответить
            .col-auto
              button.product-review-answer-toggler
                span #{item.answers.length} 
                  if (item.answers.length == 1) 
                    span ответ
                  else if (item.answers.length > 1 && item.answers.length <= 4)
                    span ответа
                  else 
                    span ответов 
                i.bi.bi-chevron-down
        .col-auto
          button.product-review-like
            +svgMono('like')
            span 2
      each answer in item.answers
        .product-review-answer.row.align-items-center.justify-content-between.ms-5.mt-2.border-start.d-none
          .col-auto
            .product-review-answer-author=answer.author
          .col-auto
            .product-review-answer-date=answer.date
          .col-12.mt-2 
            .product-review-answer-text=answer.text