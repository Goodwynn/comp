#change-tel-complete-modal.micromodal.micromodal-slide(aria-hidden='true')
  .micromodal-overlay(tabindex='-1' data-micromodal-close)
    .micromodal-container.account-modal(role='dialog' aria-modal='true')
      .micromodal-header.row.justify-content-between.mb-4
        .col
          .micromodal-title Изменение номера телефона
        .col-auto
          button.micromodal-close
            +svgMono('close')
      .micromodal-content.text-center
        +svgColor('circle-check')
        .thx-page-title Номер телефона был успешно изменен
        .thx-page-text Ваш номер телефона был успешно изменен на новый.
